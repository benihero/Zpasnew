<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bgtry"
    android:layout_height="match_parent"
    tools:context=".SpkWelcome">


    <ImageView
        android:layout_width="150dp"
        android:src="@drawable/ggflogo"
        android:layout_height="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:elevation="3dp"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:padding="4dp"
            android:textSize="24dp"
            android:fontFamily="@font/timeless"
            android:textStyle="bold"
            android:text="PT Great Giant Peneaple"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="4dp"
            android:textSize="14dp"
            android:fontFamily="@font/timeless"
            android:textStyle="bold"
            android:text="Terbanggi Besar - Lampung Tengah"
            android:layout_height="wrap_content"/>



    </LinearLayout>

    <TextView
        android:id="@+id/tanggalcurrent"
        android:layout_width="match_parent"
        android:padding="9dp"
        android:textSize="15dp"
        android:fontFamily="@font/timeless"
        android:textStyle="bold"
        android:text="08-12-2020"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/rela1"
        android:layout_margin="8dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:padding="6dp"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="SPK LIST"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:padding="6dp"
            android:hint="Cari Mandor"
            android:background="@drawable/bg_search"
            android:textSize="15dp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_baseline_search_24"
            android:layout_marginBottom="10dp"
            android:layout_height="40dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reyspk"
            android:background="@drawable/bg_alamat"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>





</LinearLayout>
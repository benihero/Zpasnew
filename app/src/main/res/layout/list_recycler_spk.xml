<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/ListAktifitas"
            android:layout_width="0dp"
            android:textSize="16dp"
            android:layout_weight="2.5"
            android:textColor="@color/black"
            android:text="Tanam Sucker"
            android:gravity="center"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text="Satuan"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:gravity="fill"
            android:textColor="@color/black"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="0dp"
            android:text=":"
            android:gravity="fill"
            android:layout_weight="0.1"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/ListSatuan"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:textColor="@color/black"
            android:text="BTG"
            android:gravity="fill"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:text="Lokasi"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:gravity="fill"
            android:textColor="@color/black"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="0dp"
            android:text=":"
            android:gravity="fill"
            android:layout_weight="0.1"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/ListLokasi"
            android:textColor="@color/black"
            android:text="UPH123"
            android:gravity="fill"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text="Status"
            android:textStyle="bold"
            android:layout_weight="0.54"
            android:gravity="fill"
            android:textColor="@color/black"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="0dp"
            android:text=":"
            android:gravity="fill"
            android:layout_weight="0.1"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.6"
            android:text="UPH102"
            android:id="@+id/ListStatus"
            android:textColor="@color/black"
            android:gravity="fill"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text="L Hasil"
            android:layout_weight="0.58"
            android:gravity="fill"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="0dp"
            android:text=":"
            android:gravity="fill"
            android:layout_weight="0.1"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:id="@+id/ListLhasil"
            android:layout_weight="0.5"
            android:background="@color/green"
            android:text="10"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:text="T Hasil"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.54"
            android:textStyle="bold"
            android:gravity="fill"
            android:textColor="@color/black"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="0dp"
            android:text=":"
            android:gravity="fill"
            android:layout_weight="0.1"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:id="@+id/ListThasil"
            android:text="1000"
            android:layout_marginRight="1dp"
            android:background="@color/blue"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:text="Jml TK"
            android:textStyle="bold"
            android:layout_weight="0.54"
            android:gravity="fill"
            android:textColor="@color/black"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="0dp"
            android:text=":"
            android:gravity="fill"
            android:layout_weight="0.1"
            android:textColor="@color/black"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="10"
            android:id="@+id/ListJmlhTK"
            android:gravity="center"
            android:background="@color/yellow"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>



